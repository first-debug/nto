<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" maxHeight="1080.0" maxWidth="1920.0" minHeight="600.0" minWidth="960.0"
      prefHeight="650.0" prefWidth="1240.0" spacing="20.0" xmlns="http://javafx.com/javafx">
    <MenuBar fx:id="menuBar" prefHeight="17.0" prefWidth="552.0">
        <Menu mnemonicParsing="false" text="Файл">
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Выход"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Помощь">
            <MenuItem mnemonicParsing="false" onAction="#showDocumentation" text="О приложении"/>
        </Menu>
    </MenuBar>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Создать задание">
        <font>
            <Font size="30.0"/>
        </font>
    </Text>
    <VBox prefHeight="460.0" prefWidth="1080.0" spacing="5.0">
        <HBox alignment="CENTER" prefHeight="380.0" prefWidth="1040.0" spacing="15.0">
            <TabPane fx:id="tabPane" prefHeight="367.0" prefWidth="872.0" tabClosingPolicy="UNAVAILABLE">
                <Tab text="События">
                    <VBox alignment="TOP_RIGHT" prefHeight="327.0" prefWidth="570.0"
                          style="-fx-background-color: #DBDBDBFF;">
                        <padding>
                            <Insets left="100.0" right="100.0"/>
                        </padding>
                        <TableView fx:id="eventTable" prefHeight="286.0" prefWidth="754.0">
                            <columns>
                                <TableColumn fx:id="eventColumn" prefWidth="414.0" text="Событие"/>
                                <TableColumn fx:id="startTimeColumn" minWidth="0.0" prefWidth="125.0" text="Начало"/>
                                <TableColumn fx:id="eventTypeColumn" prefWidth="135.0" text="Вид"/>
                            </columns>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </TableView>
                        <Text fx:id="warningEvent" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                              text="Нужно выбрать мероприятие!" visible="false"/>
                        <Button mnemonicParsing="false" onAction="#switchToEditEvents" text="Редактивароть">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                    </VBox>
                </Tab>
                <Tab fx:id="taskTab" text="Задания">
                    <VBox alignment="TOP_RIGHT" prefHeight="338.0" prefWidth="858.0">
                        <TableView fx:id="tableOfTasks" accessibleHelp="Нет событий" prefHeight="287.0"
                                   prefWidth="875.0">
                            <columns>
                                <TableColumn fx:id="timeRegColumn" prefWidth="111.0" text="Время создания"/>
                                <TableColumn fx:id="typeColumn" prefWidth="142.0" text="Тип"/>
                                <TableColumn fx:id="eventNameColumn" prefWidth="181.0" text="Мероприятие"/>
                                <TableColumn fx:id="spaceColumn" prefWidth="129.0" text="Помещение"/>
                                <TableColumn fx:id="deadlineColumn" prefWidth="96.0" text="Срок"/>
                                <TableColumn fx:id="descriptionColumn" minWidth="0.0" prefWidth="119.0"
                                             text="Описнание"/>
                                <TableColumn fx:id="statusColumn" prefWidth="97.0" text="Статус"/>
                            </columns>
                        </TableView>
                        <Text fx:id="warningTasks" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"/>
                        <HBox alignment="CENTER_RIGHT" spacing="5.0">
                            <Button mnemonicParsing="false" onAction="#edit" text="Изменить">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Button>
                            <Button mnemonicParsing="false" onAction="#delete" text="Удалить">
                                <font>
                                    <Font size="13.0"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>
                </Tab>
            </TabPane>
            <VBox alignment="TOP_RIGHT" prefHeight="351.0" prefWidth="280.0">
                <TableView fx:id="typeTable" prefHeight="315.0" prefWidth="280.0">
                    <columns>
                        <TableColumn fx:id="taskType" prefWidth="104.0" text="Вид"/>
                        <TableColumn fx:id="typeDescriptionColumn" prefWidth="175.0" text="Описание"/>
                    </columns>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </TableView>
                <Text fx:id="warningType" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                      text="Нужно выбрать вид!" visible="false"/>
                <Button mnemonicParsing="false" onAction="#switchToEditTypes" text="Редактировать"/>
            </VBox>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <HBox alignment="CENTER" prefHeight="93.0" prefWidth="402.0" spacing="20.0">
                <HBox alignment="TOP_CENTER" prefHeight="297.0" prefWidth="204.0">
                    <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Сразу &quot;К выполнению&quot;:">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Text>
                    </VBox>
                </HBox>
                <VBox prefHeight="297.0" prefWidth="168.0" spacing="15.0">
                    <RadioButton fx:id="executed" mnemonicParsing="false" onAction="#checkExecutedStatus" text="Да">
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </RadioButton>
                    <RadioButton fx:id="noExecuted" mnemonicParsing="false" onAction="#checkNoExecutedStatus"
                                 selected="true" text="Нет">
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </RadioButton>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" prefHeight="93.0" prefWidth="408.0">
                <VBox prefHeight="93.0" prefWidth="186.0" spacing="5.0">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Срок выполнения:"
                          wrappingWidth="154.01025390625">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Text>
                </VBox>
                <VBox alignment="CENTER_LEFT" prefHeight="93.0" prefWidth="216.0" spacing="10.0">
                    <RadioButton fx:id="toStartEvent" mnemonicParsing="false" onAction="#checkDeadlineStart"
                                 selected="true" text="До начала мероприятия">
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </RadioButton>
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                        <RadioButton fx:id="minutesBefore" mnemonicParsing="false" onAction="#checkDeadlineBefore"
                                     text="За">
                            <font>
                                <Font size="16.0"/>
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </RadioButton>
                        <ComboBox fx:id="minutes" disable="true" editable="true" onMouseClicked="#hideWarnings"
                                  prefHeight="25.0" prefWidth="102.0" promptText="0" visibleRowCount="6"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="минут" wrappingWidth="54.052734375">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Text>
                    </HBox>
                </VBox>
            </HBox>
        </HBox>
        <VBox.margin>
            <Insets left="20.0" right="20.0"/>
        </VBox.margin>
    </VBox>
    <HBox alignment="CENTER" prefHeight="0.0" prefWidth="600.0" spacing="300.0">
        <Button mnemonicParsing="false" onAction="#switchToPrimary" text="Назад">
            <font>
                <Font size="14.0"/>
            </font>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="501.0" spacing="20.0">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <Text fx:id="successfulSaving" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: green;"
                  text="Сохранено!" visible="false"/>
            <Button mnemonicParsing="false" onAction="#save" text="Сохранить">
                <font>
                    <Font size="14.0"/>
                </font>
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#cleanForm" text="Сбросить">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
    </HBox>
</VBox>
