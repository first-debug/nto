<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" maxHeight="1080.0" maxWidth="1920.0" minHeight="600.0" minWidth="960.0" prefHeight="650.0" prefWidth="980.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <MenuBar fx:id="menuBar" prefHeight="17.0" prefWidth="552.0">
      <Menu mnemonicParsing="false" text="Файл">
         <MenuItem mnemonicParsing="false" onAction="#exit" text="Выход"/>
      </Menu>
      <Menu mnemonicParsing="false" text="Помощь">
         <MenuItem mnemonicParsing="false" onAction="#showDocumentation" text="О приложении"/>
      </Menu>
   </MenuBar>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Создать задание">
      <font>
         <Font size="30.0" />
      </font>
   </Text>
   <VBox prefHeight="500.0" prefWidth="960.0" spacing="20.0">
      <HBox alignment="CENTER" prefHeight="335.0" prefWidth="960.0" spacing="15.0">
         <padding>
            <Insets left="10.0" right="10.0"/>
         </padding>
         <VBox prefHeight="327.0" prefWidth="542.0">
            <TableView fx:id="eventTable">
               <columns>
                  <TableColumn fx:id="eventColumn" prefWidth="328.0" text="Событие"/>
                  <TableColumn fx:id="startTimeColumn" prefWidth="117.0" text="Начало"/>
                  <TableColumn fx:id="eventTypeColumn" prefWidth="96.0" text="Вид"/>
               </columns>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </TableView>
         </VBox>
         <VBox prefHeight="327.0" prefWidth="383.0">
            <TableView fx:id="typeTable">
               <columns>
                  <TableColumn fx:id="taskType" prefWidth="138.0" text="Тип"/>
                  <TableColumn fx:id="typeDescriptionColumn" prefWidth="244.0" text="Описание"/>
               </columns>
               <cursor>
                  <Cursor fx:constant="HAND"/>
               </cursor>
            </TableView>
         </VBox>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <HBox alignment="CENTER" prefHeight="93.0" prefWidth="485.0" spacing="20.0">
            <HBox alignment="TOP_CENTER" prefHeight="297.0" prefWidth="204.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Сразу &quot;К выполнению&quot;:">
                  <font>
                     <Font size="18.0"/>
                  </font>
               </Text>
            </HBox>
            <VBox prefHeight="297.0" prefWidth="168.0" spacing="15.0">
               <RadioButton fx:id="executed" mnemonicParsing="false" onAction="#checkExecutedStatus" text="Да">
                  <font>
                     <Font size="16.0"/>
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND"/>
                  </cursor>
               </RadioButton>
               <RadioButton fx:id="noExecuted" mnemonicParsing="false" onAction="#checkNoExecutedStatus"
                            selected="true" text="Нет">
                  <font>
                     <Font size="16.0"/>
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND"/>
                  </cursor>
               </RadioButton>
            </VBox>
         </HBox>
         <HBox alignment="CENTER" prefHeight="90.0" prefWidth="481.0">
            <HBox alignment="TOP_CENTER" prefHeight="73.0" prefWidth="200.0">
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Срок выполнения:"
                     wrappingWidth="154.01025390625">
                  <font>
                     <Font size="18.0"/>
                  </font>
               </Text>
            </HBox>
            <VBox alignment="CENTER_LEFT" prefHeight="93.0" prefWidth="216.0" spacing="10.0">
               <RadioButton fx:id="toStartEvent" mnemonicParsing="false" onAction="#checkDeadlineStart"
                            text="До начала мероприятия">
                  <font>
                     <Font size="16.0"/>
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND"/>
                  </cursor>
               </RadioButton>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                  <RadioButton fx:id="minutesBefore" mnemonicParsing="false" onAction="#checkDeadlineBefore"
                               text="За">
                     <font>
                        <Font size="16.0"/>
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND"/>
                     </cursor>
                  </RadioButton>
                  <ComboBox fx:id="minutes" disable="true" editable="true" onMouseClicked="#hideWarnings"
                            prefHeight="25.0" prefWidth="102.0" promptText="0" visibleRowCount="6"/>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="минут" wrappingWidth="54.052734375">
                     <font>
                        <Font size="16.0"/>
                     </font>
                  </Text>
               </HBox>
            </VBox>
         </HBox>
      </HBox>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="600.0" spacing="370.0">
         <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
            <opaqueInsets>
               <Insets/>
            </opaqueInsets>
            <HBox.margin>
               <Insets bottom="5.0"/>
            </HBox.margin>
            <padding>
               <Insets bottom="5.0" left="5.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#switchToPrimary" text="Назад">
               <font>
                  <Font size="14.0"/>
               </font>
               <HBox.margin>
                  <Insets/>
               </HBox.margin>
            </Button>
         </HBox>
         <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <opaqueInsets>
               <Insets/>
            </opaqueInsets>
            <HBox.margin>
               <Insets bottom="5.0"/>
            </HBox.margin>
            <padding>
               <Insets bottom="5.0" right="5.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#save" text="Сохранить">
               <font>
                  <Font size="14.0"/>
               </font>
               <HBox.margin>
                  <Insets/>
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#cleanForm" text="Сбросить">
               <font>
                  <Font size="14.0"/>
               </font>
            </Button>
         </HBox>
      </HBox>
   </VBox>
</VBox>
