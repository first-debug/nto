<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" maxHeight="1080.0" maxWidth="1920.0" minHeight="600.0" minWidth="960.0"
      prefHeight="725.0" prefWidth="1240.0" spacing="20.0" xmlns="http://javafx.com/javafx">
    <MenuBar fx:id="menuBar" prefHeight="17.0" prefWidth="552.0">
        <Menu mnemonicParsing="false" text="Файл">
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Выход"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Помощь">
            <MenuItem mnemonicParsing="false" onAction="#showDocumentation" text="О приложении"/>
        </Menu>
    </MenuBar>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Добавить мероприятие">
        <font>
            <Font size="30.0"/>
        </font>
    </Text>
    <HBox alignment="CENTER" prefHeight="460.0" prefWidth="1080.0" spacing="5.0">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <VBox.margin>
            <Insets left="20.0" right="20.0"/>
        </VBox.margin>
        <VBox prefHeight="457.0" prefWidth="478.0" spacing="15.0">
            <HBox.margin>
                <Insets top="29.0"/>
            </HBox.margin>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Название" wrappingWidth="138.611328125">
                <font>
                    <Font size="18.0"/>
                </font>
            </Text>
            <VBox prefHeight="47.0" prefWidth="436.0">
                <TextField fx:id="titleInput" onMouseClicked="#hideWarnings" prefHeight="25.0" prefWidth="321.0"
                           promptText="Название">
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                    <VBox.margin>
                        <Insets right="130.0"/>
                    </VBox.margin>
                </TextField>
                <Text fx:id="warningTitle" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                      text="Нужно ввести название!" visible="false"/>
            </VBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Описание" wrappingWidth="177.45947265625">
                <font>
                    <Font size="18.0"/>
                </font>
            </Text>
            <VBox prefHeight="163.0" prefWidth="437.0">
                <TextArea fx:id="descriptionInput" onMouseClicked="#hideWarnings" prefHeight="200.0" prefWidth="200.0"
                          promptText="Описание" wrapText="true"/>
                <Text id="warning-text" fx:id="warningDescription" strokeType="OUTSIDE" strokeWidth="0.0"
                      style="-fx-fill: red;" text="Нужно ввести описание!" visible="false"/>
            </VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="87.0" prefWidth="557.0">
                <VBox alignment="CENTER" prefHeight="83.0" prefWidth="102.0" spacing="23.0">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Дата:" wrappingWidth="38.6708984375">
                        <font>
                            <Font size="16.0"/>
                        </font>
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Время:" wrappingWidth="51.58935546875">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Text>
                </VBox>
                <VBox alignment="CENTER" prefHeight="83.0" prefWidth="339.0" spacing="10.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <DatePicker fx:id="dateInput" onInputMethodTextChanged="#hideWarnings"
                                onMouseClicked="#hideWarnings" prefHeight="30.0" prefWidth="233.0" promptText="Дата"/>
                    <HBox alignment="CENTER" prefHeight="36.0" prefWidth="222.0" spacing="7.0">
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Часы" wrappingWidth="30.43701171875">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Text>
                        <ComboBox fx:id="hours" editable="true" onAction="#fixHours" onMouseMoved="#hideWarnings"
                                  prefHeight="25.0" prefWidth="65.0" promptText="00" visibleRowCount="6"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Минуты">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Text>
                        <ComboBox fx:id="minutes" editable="true" onAction="#fixMinutes" onMouseMoved="#hideWarnings"
                                  prefHeight="25.0" prefWidth="65.0" promptText="00" visibleRowCount="6"/>
                    </HBox>
                </VBox>
                <VBox alignment="CENTER" prefHeight="83.0" prefWidth="115.0">
                    <Text fx:id="warningDate" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                          text="Нужно ввести корректную дату и время!" textAlignment="CENTER" visible="false"
                          wrappingWidth="114.044921875"/>
                </VBox>
            </HBox>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="431.0" prefWidth="126.0">
            <TableView fx:id="typeTable" onMouseClicked="#hideWarnings" prefHeight="360.0">
                <columns>
                    <TableColumn fx:id="type" maxWidth="125.0" prefWidth="125.0" text="Виды"/>
                </columns>
            </TableView>
            <Text fx:id="warningType" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                  text="Нужно выбрать тип!" visible="false"/>
            <HBox alignment="CENTER">
                <Button mnemonicParsing="false" onAction="#switchToEditEventTypes" text="Редактировать">
                    <font>
                        <Font size="13.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox.margin>
                <Insets top="29.0"/>
            </HBox.margin>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </VBox>
        <TabPane prefHeight="460.0" prefWidth="531.0" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Помещения">
                <VBox alignment="TOP_RIGHT" prefHeight="457.0" prefWidth="427.0">
                    <TableView fx:id="spacesTable" onMouseClicked="#hideWarnings" prefHeight="360.0" prefWidth="317.0">
                        <columns>
                            <TableColumn fx:id="spaceNameColumn" prefWidth="89.0" text="Название"/>
                            <TableColumn fx:id="spaceDescriptionColumn" prefWidth="168.0" text="Описание"/>
                            <TableColumn fx:id="areaColumn" prefWidth="62.0" text="Площадь"/>
                            <TableColumn fx:id="capacityColumn" prefWidth="84.0" text="Вместимость"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <Text fx:id="warningSpace" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                          text="Нужно выбрать помещение!" visible="false" wrappingWidth="160.13671875"/>
                    <HBox alignment="CENTER_RIGHT" spacing="5.0">
                        <Button mnemonicParsing="false" onAction="#switchToEditSpaces" text="Редактировать">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                    </HBox>
                    <padding>
                        <Insets bottom="5.0"/>
                    </padding>
                </VBox>
            </Tab>
            <Tab text="Мероприятия">
                <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0">
                    <TableView fx:id="eventsTable" onMouseClicked="#hideWarnings" prefHeight="360.0" prefWidth="317.0">
                        <columns>
                            <TableColumn fx:id="eventColumn" prefWidth="92.0" text="Имя"/>
                            <TableColumn fx:id="eventDescriptionColumn" prefWidth="133.0" text="Описание"/>
                            <TableColumn fx:id="spaceColumn" prefWidth="112.0" text="Помещение"/>
                            <TableColumn fx:id="startColumn" prefWidth="98.0" text="Начало"/>
                            <TableColumn fx:id="typeColumn" prefWidth="99.0" text="Вид"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <Text fx:id="warningEvent" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;"
                          text="Нужно выбрать мероприятие!" visible="false"/>
                    <HBox alignment="CENTER_RIGHT" spacing="5.0">
                        <Button mnemonicParsing="false" onAction="#edit" text="Изменить">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#delete" text="Удалить">
                            <font>
                                <Font size="13.0"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </HBox>
    <HBox alignment="CENTER" prefHeight="0.0" prefWidth="960.0" spacing="300.0">
        <Button mnemonicParsing="false" onAction="#switchToPrimary" text="Назад">
            <font>
                <Font size="14.0"/>
            </font>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="270.0" spacing="20.0">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <Text fx:id="successfulSaving" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: green;"
                  text="Сохранено!" visible="false"/>
            <Button mnemonicParsing="false" onAction="#save" text="Добавить">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#cleanForm" text="Очистить">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </HBox>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <padding>
            <Insets bottom="5.0"/>
        </padding>
    </HBox>
</VBox>
